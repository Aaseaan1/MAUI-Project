@page "/home"
@using JournalApp.Models
@using JournalApp.Services
@rendermode InteractiveServer

@inject JournalService JournalService
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>Journal - Home</PageTitle>

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="display-5"><strong>My Journal ðŸ““</strong></h1>
            <p class="lead text-muted">Write and reflect on your thoughts</p>
            <button class="btn btn-primary btn-lg" @onclick="CreateEntry">
                âœš New Entry
            </button>
        </div>
    </div>

    @if (entries != null && entries.Count > 0)
    {
        <div class="row mb-4">
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card text-white bg-success">
                    <div class="card-body text-center">
                        <h4 class="mb-0">@currentStreak</h4>
                        <small>Current streak (days)</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card text-white bg-secondary">
                    <div class="card-body text-center">
                        <h4 class="mb-0">@longestStreak</h4>
                        <small>Longest streak</small>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (entries == null)
    {
        <div class="alert alert-info">Loading entries...</div>
    }
    else if (entries.Count == 0)
    {
        <div class="alert alert-info text-center" role="alert">
            <h4 class="alert-heading">No entries yet</h4>
            <p>Start journalizing by creating your first entry!</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var entry in entries)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title">@entry.Title</h5>
                                <span class="badge bg-info">@entry.PrimaryMood</span>
                            </div>
                            <p class="card-text text-truncate">@entry.Content</p>
                            <small class="text-muted">
                                @entry.EntryDate.ToString("MMM dd, yyyy")
                                @if (entry.ModifiedDate.HasValue)
                                {
                                    <span>(Edited)</span>
                                }
                            </small>
                            @if (!string.IsNullOrEmpty(entry.Tags))
                            {
                                <div class="mt-2">
                                    @foreach (var tag in entry.Tags.Split(','))
                                    {
                                        <span class="badge bg-secondary">@tag.Trim()</span>
                                    }
                                </div>
                            }
                        </div>
                        <div class="card-footer bg-transparent">
                            <button class="btn btn-sm btn-outline-primary" 
                                    @onclick="() => ViewEntry(entry.Id)">
                                View
                            </button>
                            <button class="btn btn-sm btn-outline-warning" 
                                    @onclick="() => EditEntry(entry.Id)">
                                Edit
                            </button>
                            <button class="btn btn-sm btn-outline-danger" 
                                    @onclick="() => DeleteEntry(entry.Id)">
                                Delete
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<JournalEntry>? entries;
    private int currentStreak;
    private int longestStreak;

    protected override async Task OnInitializedAsync()
    {
        entries = await JournalService.GetAllEntriesAsync();
        ComputeStreaks();
    }

    private void ComputeStreaks()
    {
        if (entries == null || entries.Count == 0)
        {
            currentStreak = 0;
            longestStreak = 0;
            return;
        }

        var distinctDates = entries.Select(e => e.EntryDate.Date).Distinct().ToList();

        // Current streak: walk backward from today
        currentStreak = 0;
        var checkDate = DateTime.Today;
        foreach (var date in distinctDates.OrderByDescending(d => d))
        {
            if (date == checkDate)
            {
                currentStreak++;
                checkDate = checkDate.AddDays(-1);
            }
            else if (date < checkDate)
            {
                break;
            }
        }

        // Longest streak: scan ordered dates
        var ordered = distinctDates.OrderBy(d => d).ToList();
        longestStreak = ordered.Count > 0 ? 1 : 0;
        var run = longestStreak;
        for (int i = 1; i < ordered.Count; i++)
        {
            if ((ordered[i] - ordered[i - 1]).Days == 1)
            {
                run++;
                if (run > longestStreak) longestStreak = run;
            }
            else
            {
                run = 1;
            }
        }
    }

    private void CreateEntry()
    {
        Navigation.NavigateTo("/create");
    }

    private void ViewEntry(int id)
    {
        Navigation.NavigateTo("/view/" + id);
    }

    private void EditEntry(int id)
    {
        Navigation.NavigateTo("/edit/" + id);
    }

    private async Task DeleteEntry(int id)
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "Are you sure you want to delete this entry?");
        if (confirmed)
        {
            await JournalService.DeleteEntryAsync(id);
            entries = await JournalService.GetAllEntriesAsync();
            ComputeStreaks();
        }
    }
}
